<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText" android:layout_weight="0.5" android:editable="false"
                android:saveEnabled="false"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText2" android:layout_weight="0.5" android:editable="false"
                android:saveEnabled="false"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Press me!"
                android:id="@+id/button" android:layout_weight="0.5"/>
        <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Press me, too!"
                android:id="@+id/button2" android:layout_weight="0.5"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_gravity="center|right">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Go to next activity"
                android:id="@+id/activityButton" android:layout_gravity="center"/>
    </LinearLayout>
</LinearLayout>

